@model IEnumerable<SysPatrimonio.Models.DbUsuario>

@{
    ViewData["Title"] = "Index";
}

<div>
<h1>Usuários</h1>
    <a asp-action="Create" class="btn btn-success mb-3">+ Criar Novo</a>
</div>


<table class="table table-success table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td class="d-flex justify-content-evenly">          
                <a asp-action="Edit" asp-route-id="@item.id" title="Editar"><i class="fa-solid fa-pen-to-square" style="color: gray; font-size: 24px"></i></a>
                <a asp-action="Details" asp-route-id="@item.id" title="Detalhes"><i class="fa-solid fa-file-lines" style="color: green; font-size: 24px"></i></a>
                <a asp-action="Delete" asp-route-id="@item.id" title="Excluir"><i class="fa-solid fa-trash-can" style="color: red; font-size: 24px"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
